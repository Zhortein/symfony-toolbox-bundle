{% set actionChangePage = "click->"~datatable.stimulusControllerName~"#changePage" %}
{% set ulCss = 'pagination' %}
{% set liCss = 'page-item' %}
{% set aCss = 'page-link' %}
{% set activeCss = 'active' %}

<ul class="{{ ulCss }}">
    {% if data.pagination.hasPrevious %}
        <li class="{{ liCss }}">
            <a class="{{ aCss }}" data-page="{{ data.pagination.previous }}" data-action="{{ actionChangePage }}" aria-label="{{ 'datatable.pagination.previous'|trans({}, transDomain) }}">
                {% if not datatable.isIconUxMode %}
                    <span aria-hidden="true" class="{{ datatable.getIcon('icon_previous') }}"></span>
                {% else %}
                    {{ ux_icon(datatable.getIcon('icon_previous'), {height: '16px', width: '16px', class: 'w-16 h-16', viewbox: '0 0 16 16', 'aria-hidden': true}) }}
                {% endif %}
            </a>
        </li>
    {% endif %}
    {% for page in data.pagination.pages %}
        <li class="{{ liCss }}">
            <a class="{{ aCss }}{% if page == data.pagination.current %} {{ activeCss }}{% endif %}" data-page="{{ page }}" data-action="{{ actionChangePage }}">
                {{ page }}
            </a>
        </li>
    {% endfor %}
    {% if data.pagination.hasNext %}
        <li class="{{ liCss }}">
            <a class="{{ aCss }}" data-page="{{ data.pagination.next }}" data-action="{{ actionChangePage }}" aria-label="{{ 'datatable.pagination.next'|trans({}, transDomain) }}">
                {% if not datatable.isIconUxMode %}
                    <span aria-hidden="true" class="{{ datatable.getIcon('icon_next') }}"></span>
                {% else %}
                    {{ ux_icon(datatable.getIcon('icon_next'), {height: '16px', width: '16px', class: 'w-16 h-16', viewbox: '0 0 16 16', 'aria-hidden': true}) }}
                {% endif %}
            </a>
        </li>
    {% endif %}
</ul>
